<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@house) do |f| %>
      <p class="text-right">*必須</p>
      <%= f.hidden_field :investigation_id, :value => @investigation.id %>

      <div class="form-group">
        <%= f.label :house_number, '家屋番号*' %>
        <%= f.number_field :house_number, :class=>"form-control" %>
      </div>
    
      <div class="form-group">
        <%= f.label :house_name, '家屋名（居住者名）*' %>
        <%= f.text_field :house_name, :class=>"form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :resident_phone_number, '居住者電話番号' %>
        <%= f.telephone_field :resident_phone_number, :class=>"form-control" %>
      </div>
      
      <div class="bg-info" style="padding:10px; margin-bottom:10px;">
        <p class="lead">建物情報</p>
        <div class="form-group">
          <%= f.label :prefectures, '都道府県*' %>
          <%= f.select :prefectures, Constants::LIST_PREFECTURES, :prompt => "選択してください", :class=>"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :city, '市区町村' %>
          <%= f.text_field :city, :class=>"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :block, '番地' %>
          <%= f.text_field :block, :class=>"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :construction, '構造' %>
          <%= f.select :construction, $HOUSE_CONSTRUCTION, :prompt => "選択してください" %>
        </div>
        <div class="form-group">
          <%= f.label :floors, '階数' %>
          <%= f.select :floors, $HOUSE_FLOORS, :prompt => "選択してください" %>
        </div>
        <div class="form-group">
          <%= f.label :area, '延面積(m2)' %>
          <%= f.text_field :area, :class=>"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :use, '用途' %>
          <%= f.text_field :use, :class=>"form-control" %>
        </div>           
      </div>
      <hr/>
      <div class="bg-info" style="padding:10px; margin-bottom:10px;">
        <p class="lead">所有者情報</p>
        <div class="form-group">
          <%= f.label :owner_name_ruby, '所有者名（フリガナ）' %>
          <%= f.text_field :owner_name_ruby, :class=>"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :owner_name, '所有者名' %>
          <%= f.text_field :owner_name, :class=>"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :owner_prefectures, '都道府県' %>
          <%= f.select :owner_prefectures, Constants::LIST_PREFECTURES, :prompt => "選択してください", :class=>"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :owner_city, '市区町村' %>
          <%= f.text_field :owner_city, :class=>"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :owner_block, '番地' %>
          <%= f.text_field :owner_block, :class=>"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :owner_phone_number, '所有者電話番号' %>
          <%= f.telephone_field :owner_phone_number, :class=>"form-control" %>
        </div>        
      </div>
      <hr/>      
      <div class="bg-info" style="padding:10px; margin-bottom:10px;">
        <p class="lead">事前調査情報</p>        
        <div class="form-group">
          <%= f.label :overview_pre_survey, '建物概要' %>
          <%= f.select :overview_pre_survey, $SURVEY_OVERVIEW, :prompt => "選択してください" %>
        </div>
        <div class="form-group">
          <%= f.label :range_pre_survey, '調査範囲' %>
          <%= f.text_field :range_pre_survey, :class=>"form-control" %>
        </div>
      </div>
      <hr/>      
      <div class="bg-info" style="padding:10px; margin-bottom:10px;">
        <p class="lead">事中調査情報</p>        
        <div class="form-group">
          <%= f.label :overview_ongoing_survey, '建物概要' %>
          <%= f.select :overview_ongoing_survey, $SURVEY_OVERVIEW, :prompt => "選択してください" %>
        </div>
        <div class="form-group">
          <%= f.label :range_ongoing_survey, '調査範囲' %>
          <%= f.text_field :range_ongoing_survey, :class=>"form-control" %>
        </div>
      </div>     
      <hr/>    
      <div class="bg-info" style="padding:10px; margin-bottom:10px;">
        <p class="lead">事後調査情報</p>        
        <div class="form-group">
          <%= f.label :overview_after_survey, '建物概要' %>
          <%= f.select :overview_after_survey, $SURVEY_OVERVIEW, :prompt => "選択してください" %>
        </div>
        <div class="form-group">
          <%= f.label :range_after_survey, '調査範囲' %>
          <%= f.text_field :range_after_survey, :class=>"form-control" %>
        </div>
      </div>       
      <%= f.submit '登録', :class=>"btn btn-primary" %>
    <% end %>
  </div>
</div>