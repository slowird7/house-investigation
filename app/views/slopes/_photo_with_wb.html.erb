<div id="keisya-<%= keisya.id %>" class="post-img">
  <%= image_tag slope.image1, id: "keisya-" + keisya.id.to_s + "_img" %>
  
  <% if slope.position_wb == 0 %>
    <!-- 左上 -->
    <div class="slope_wb_left_top"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: slope } %></div>  
  <% elsif slope.position_wb == 1 %>
    <!-- 上 -->
    <div class="slope_wb_top"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: slope } %></div>    
  <% elsif slope.position_wb == 2 %>
    <!-- 右上 -->
    <div class="slope_wb_right_top"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: slope } %></div>    
  <% elsif slope.position_wb == 3 %>
    <!-- 右下 -->
    <div class="slope_wb_right_down"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: slope } %></div>    
  <% elsif slope.position_wb == 4 %>
    <!-- 下 -->
    <div class="slope_wb_down"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: slope } %></div>
  <% elsif slope.position_wb == 5 %>
    <!-- 左下 -->
    <div class="slope_wb_left_down"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: slope } %></div>
  <% elsif slope.position_wb == 6 %>
    <!-- 左上（横置き） -->
    <div class="slope_wb_yoko_left_top"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: slope } %></div>  
  <% elsif slope.position_wb == 7 %>
    <!-- 上（横置き） -->
    <div class="slope_wb_yoko_top"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: slope } %></div>    
  <% elsif slope.position_wb == 8 %>
    <!-- 右上（横置き） -->
    <div class="slope_wb_yoko_right_top"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: slope } %></div>    
  <% elsif slope.position_wb == 9 %>
    <!-- 右下（横置き） -->
    <div class="slope_wb_yoko_right_down"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: slope } %></div>    
  <% elsif slope.position_wb == 10 %>
    <!-- 下（横置き） -->
    <div class="slope_wb_yoko_down"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: slope } %></div>
  <% else %>
    <!-- 左下（横置き） -->
    <div class="slope_wb_yoko_left_down"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: slope } %></div>
  <% end %>
</div>

<style>
.post-img {
  position: relative;
  margin-top:10px;
  margin-bottom:20px;
  width: 60%;
  font-size: 60%;
}
.post-img > img {
  width: 100%;
}
/*
 縦置き
*/
.slope_wb_left_top {
  position: absolute;
  top: 0;
  left: 0;
}
.slope_wb_top {
  position: absolute;
  top: 0;
  left: 40%;
}
.slope_wb_right_top {
  position: absolute;
  top: 0;
  right: 0;
}
.slope_wb_right_down {
  position: absolute;
  bottom: 0;
  right: 0;
}
.slope_wb_down {
  position: absolute;
  bottom: 0;
  left: 40%;
}
.slope_wb_left_down {
  position: absolute;
  bottom: 0;
  left: 0;
}
/*
 横置き
*/
.slope_wb_yoko_left_top {
  position: absolute;
  top: 200px;
  left: 0;
  transform:rotate(-90deg);
  transform-origin:left top;
}
.slope_wb_yoko_top {
  position: absolute;
  top: 200px;
  left: calc(50% - 85px);
  transform:rotate(-90deg);
  transform-origin:left top;
}
.slope_wb_yoko_right_top {
  position: absolute;
  top: 200px;
  right: -20px;
  transform:rotate(-90deg);
  transform-origin:left top;
}
.slope_wb_yoko_right_down {
  position: absolute;
  bottom: -180px;
  right: -20px;
  transform:rotate(-90deg);
  transform-origin:left top;
}
.slope_wb_yoko_down {
  position: absolute;
  bottom: -180px;
  left: calc(50% - 85px);
  transform:rotate(-90deg);
  transform-origin:left top;
}
.slope_wb_yoko_left_down {
  position: absolute;
  bottom: -180px;
  left: 0;
  transform:rotate(-90deg);
  transform-origin:left top;
}
</style>