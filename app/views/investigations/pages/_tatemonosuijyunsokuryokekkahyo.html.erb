              <td style="width: 550px">
                <div class="post-img"> 
                  <%= image_tag pre_post.image1 %>
                  <% if pre_post.position_wb == 0 %>
                    <!-- 左上 -->
                    <div class="wb_left_top"><%= render 'posts/wb', { house: house, point: point, post: pre_post } %></div>  
                  <% elsif pre_post.position_wb == 1 %>
                    <!-- 上 -->
                    <div class="wb_top"><%= render 'posts/wb', { house: house, point: point, post: pre_post } %></div>    
                  <% elsif pre_post.position_wb == 2 %>
                    <!-- 右上 -->
                    <div class="wb_right_top"><%= render 'posts/wb', { house: house, point: point, post: pre_post } %></div>    
                  <% elsif pre_post.position_wb == 3 %>
                    <!-- 右下 -->
                    <div class="wb_right_down"><%= render 'posts/wb', { house: house, point: point, post: pre_post } %></div>    
                  <% elsif pre_post.position_wb == 4 %>
                    <!-- 下 -->
                    <div class="wb_down"><%= render 'posts/wb', { house: house, point: point, post: pre_post } %></div>
                  <% else %>
                    <!-- 左下 -->
                    <div class="wb_left_down"><%= render 'posts/wb', { house: house, point: point, post: pre_post } %></div>
                  <% end %>
                </div>
              </td>
              <td>測点：<%= point.number %></td>
            </tr>
          <% end %>
        <% end %>
      </table>
    </div>
  <% end %><!-- while num < points.length do -->
<% end %>

<style>
.post-img {
  width: 100%;
  position: relative;
  font-size: 9px;
}
.post-img > img {
  width: 100%;
}
.post-img > .wb_left_top {
  position: absolute;
  top: 0;
  left: 0;
}
.post-img > .wb_top {
  position: absolute;
  top: 0;
  left: 40%;
}
.post-img > .wb_right_top {
  position: absolute;
  top: 0;
  right: 0;
}
.post-img > .wb_right_down {
  position: absolute;
  bottom: 0;
  right: 0;
}
.post-img > .wb_down {
  position: absolute;
  bottom: 0;
  left: 40%;
}
.post-img > .wb_left_down {
  position: absolute;
  bottom: 0;
  left: 0;
}
</style>