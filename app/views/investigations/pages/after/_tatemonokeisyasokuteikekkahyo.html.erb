              <td style="max-height: 30%;">
                <div class="post-img"> 
                  <%= image_tag after_slope.image1 %>
                  <% if after_slope.position_wb == 0 %>
                    <!-- 左上 -->
                    <div class="wb_left_top"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: after_slope } %></div>  
                  <% elsif after_slope.position_wb == 1 %>
                    <!-- 上 -->
                    <div class="wb_top"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: after_slope } %></div>    
                  <% elsif after_slope.position_wb == 2 %>
                    <!-- 右上 -->
                    <div class="wb_right_top"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: after_slope } %></div>    
                  <% elsif after_slope.position_wb == 3 %>
                    <!-- 右下 -->
                    <div class="wb_right_down"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: after_slope } %></div>    
                  <% elsif after_slope.position_wb == 4 %>
                    <!-- 下 -->
                    <div class="wb_down"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: after_slope } %></div>
                  <% else %>
                    <!-- 左下 -->
                    <div class="wb_left_down"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: after_slope } %></div>
                  <% end %>
                </div>
              </td>
              <td style="min-width: 180px;">傾斜：<%= disp_alphabet(keisya.number) %></td>
            </tr>
          <% end %>
        <% end %>
        <% if num < keisyas.length %>      
          <% keisya = keisyas[num] %>
          <% after_slope = keisya.slopes.find_by(survey_type: "after") %>
          <% if after_slope != nil %>
            <% num = num + 1 %>
            <tr>
              <td style="max-height: 30%;">
                <div class="post-img"> 
                  <%= image_tag after_slope.image1 %>
                  <% if after_slope.position_wb == 0 %>
                    <!-- 左上 -->
                    <div class="wb_left_top"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: after_slope } %></div>  
                  <% elsif after_slope.position_wb == 1 %>
                    <!-- 上 -->
                    <div class="wb_top"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: after_slope } %></div>    
                  <% elsif after_slope.position_wb == 2 %>
                    <!-- 右上 -->
                    <div class="wb_right_top"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: after_slope } %></div>    
                  <% elsif after_slope.position_wb == 3 %>
                    <!-- 右下 -->
                    <div class="wb_right_down"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: after_slope } %></div>    
                  <% elsif after_slope.position_wb == 4 %>
                    <!-- 下 -->
                    <div class="wb_down"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: after_slope } %></div>
                  <% else %>
                    <!-- 左下 -->
                    <div class="wb_left_down"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: after_slope } %></div>
                  <% end %>
                </div>
              </td>
              <td style="min-width: 180px;">傾斜：<%= disp_alphabet(keisya.number) %></td>
            </tr>
          <% end %>
        <% end %>
      </table>
    </div>
  <% end %><!-- while num < points.length do -->
<% end %>