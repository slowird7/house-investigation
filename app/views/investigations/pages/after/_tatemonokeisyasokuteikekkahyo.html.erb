<% @houses.each do |house| %>
  <div class="page">
    <table class="table table-bordered" style="font-size:10px;">
      <tr>
        <td colspan="11">建物傾斜測定結果表</td>
        <td>建物No.<%= house.house_number %></td>
      </tr>
      <tr>
        <td rowspan="2">傾斜種類</td>
        <td rowspan="2">測点</td>
        <td rowspan="2">測定箇所</td>
        <td colspan="4">事前測定値（mm）</td>
        <td colspan="4">事後測定値（mm）</td>
        <td rowspan="2">備考</td>
      </tr>
      <tr>
        <td colspan="2">東西方向</td>
        <td colspan="2">南北方向</td>
        <td colspan="2">東西方向</td>
        <td colspan="2">南北方向</td>          
      </tr>
      
      <% keisyas = house.keisyas %>
      <% keisyas.each do |keisya| %>
        <% pre_slope = keisya.slopes.find_by(survey_type: "pre") %>
        <% after_slope = keisya.slopes.find_by(survey_type: "after") %>
        <tr>
          <% if pre_slope.suichokukeisya == true %>
            <td>垂直傾斜</td>
          <% elsif pre_slope.suiheikeisya == true %>
            <td>水平傾斜</td>
          <% else %>
            <td></td>
          <% end %>

          <td><%= disp_alphabet(keisya.number) %></td>
          <td><%= keisya.room_name %></td>
          
          <% if pre_slope.east != 0.0 %>
            <td>東</td>
            <td><%= pre_slope.east %></td>
          <% elsif pre_slope.west != 0.0 %>
            <td>西</td>
            <td><%= pre_slope.west %></td>
          <% else %>
            <td></td>
            <td></td>
          <% end %>
          
          <% if pre_slope.north != 0.0 %>
            <td>北</td>
            <td><%= pre_slope.north %></td>
          <% elsif pre_slope.south != 0.0 %>
            <td>南</td>
            <td><%= pre_slope.south %></td>
          <% else %>
            <td></td>
            <td></td>
          <% end %>

          <% if after_slope.east != 0.0 %>
            <td>東</td>
            <td><%= after_slope.east %></td>
          <% elsif after_slope.west != 0.0 %>
            <td>西</td>
            <td><%= after_slope.west %></td>
          <% else %>
            <td></td>
            <td></td>
          <% end %>
          
          <% if after_slope.north != 0.0 %>
            <td>北</td>
            <td><%= after_slope.north %></td>
          <% elsif after_slope.south != 0.0 %>
            <td>南</td>
            <td><%= after_slope.south %></td>
          <% else %>
            <td></td>
            <td></td>
          <% end %>

          <% if pre_slope.east == after_slope.east &&
                pre_slope.west == after_slope.west &&
                pre_slope.north == after_slope.north &&
                pre_slope.south == after_slope.south %>
            <td>変化なし</td>
          <% else %>
            <td></td>
          <% end %>
        </tr>
      <% end %>
    </table>
    <p>※測定値については±1mmの範囲で測定誤差が生じる場合があります。</p>
  </div>
  

  <% num = 0 %>
  <% while num < keisyas.length do %>
    <div class="page">
      <table class="table table-bordered" style="font-size:10px;">
        <% keisya = keisyas[num] %>
        <% after_slope = keisya.slopes.find_by(survey_type: "after") %>
        <% if after_slope != nil %>
          <% num = num + 1 %>
          <tr>
            <td style="max-height: 30%;">
              <div class="post-img"> 
                <%= image_tag after_slope.image1 %>
                <% if after_slope.position_wb == 0 %>
                  <!-- 左上 -->
                  <div class="wb_left_top"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: after_slope } %></div>  
                <% elsif after_slope.position_wb == 1 %>
                  <!-- 上 -->
                  <div class="wb_top"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: after_slope } %></div>    
                <% elsif after_slope.position_wb == 2 %>
                  <!-- 右上 -->
                  <div class="wb_right_top"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: after_slope } %></div>    
                <% elsif after_slope.position_wb == 3 %>
                  <!-- 右下 -->
                  <div class="wb_right_down"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: after_slope } %></div>    
                <% elsif after_slope.position_wb == 4 %>
                  <!-- 下 -->
                  <div class="wb_down"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: after_slope } %></div>
                <% else %>
                  <!-- 左下 -->
                  <div class="wb_left_down"><%= render 'slopes/wb', { house: house, keisya: keisya, slope: after_slope } %></div>
                <% end %>
              </div>
            </td>
            <td style="min-width: 180px;">傾斜：<%= disp_alphabet(keisya.number) %></td>
          </tr>
        <% end %>
        <% if num < keisyas.length %>      
          <% keisya = keisyas[num] %>
          <% after_slope = keisya.slopes.find_by(survey_type: "after") %>
          <% if after_slope != nil %>
            <% num = num + 1 %>
