  display: block;
  float: left;
  height: 12px;
  content: "";
}
/**************************************/

@page {
  size: A4;
  margin: 0;
}

@media print {
  #wrap {
    padding: 0;
  }

  .top-down_padding {
    padding-top: 0;
    padding-bottom: 0;
  }
  
  .page {
    /*A4縦*/
    width: 190mm;
    height: 251mm; 
    page-break-after: always;

    border: initial;
    border-radius: initial;
    min-height: initial;
    box-shadow: initial;
    background: initial;
  }
  /*最後のページは改ページを入れない*/
