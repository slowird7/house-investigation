  width: auto;
  height: auto;
  max-width: 460px;
  max-height: 330px;
}

.photo_book .book {
  width: 150px;
  height: auto !important;
}
.photo_book .book table {
  border: none !important;
}
.photo_book .book table td {
  padding-bottom:0px;
  padding-left:0px;
  padding-right:0px;
  /*
  border-top: none !important;
  border-left: none !important;
  border-right: none !important;
  */
}
.photo_book .book table .header td {
  border-bottom: solid 1px !important;
  font-size:1.2em;
}
.photo_book .book table .body td {
  border-bottom: dotted 1px !important;
}
