<ol class="breadcrumb">
  <li><%= link_to 'HOME', root_path %></li>  
  <li class="active">ユーザー一覧</li>
</ol>

<h2>ユーザー一覧</h2>
<p><%= link_to '新規ユーザー登録', new_user_path, :class=>"btn btn-primary" %></p>

<table class="table table-striped table-hover">
  <tr>
    <th>ID</th>
    <th>メールアドレス</th>
    <th>権限グループ</th>
    <th></th>
    <th></th>
  </tr>
  
  <% @users.each do |user| %>
    <tr>
      <td class="align-middle"><%= user.id %></td>
      <td class="align-middle"><%= user.email %></td>
      <td class="align-middle"><%= disp_user_role(user.role) %></td>
      <td class="align-middle"><%= link_to "編集", edit_user_url(user.id), :class=>"btn btn-default" %></td>
      <td class="align-middle"><%= link_to "削除", user, :class=>"btn btn-danger", method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %></td>
    </tr>
  <% end %>
</table>