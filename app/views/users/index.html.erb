<h2>ユーザー管理</h2>
<p><%= link_to '新規ユーザー作成', new_user_path, :class=>"btn btn-default" %></p>

<table class="table table-striped table-hover">
  <tr>
    <th class="text-center">ID</th>
    <th class="text-center">メールアドレス</th>
    <th class="text-center">権限グループ</th>
    <th class="text-center"></th>
  </tr>
  
  <% @users.each do |user| %>
    <tr>
      <td class="text-center align-middle"><%= user.id %></td>
      <td class="text-center align-middle"><%= user.email %></td>
      <td class="text-center align-middle">
        <% if user.role == "superuser" %>
          システム管理者
        <% elsif user.role == "admin" %>
          管理者
        <% else %>
          一般ユーザー
        <% end %>
      </td>
      <% unless user.role == "superuser" %>
        <td class="text-center align-middle"><%= link_to "削除", user, :class=>"btn btn-danger", method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>
